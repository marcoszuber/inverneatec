<h2 class="text-center mb-4">Iniciar Sesión</h2>

<div class="login-form mx-auto p-4 border rounded" style="max-width: 400px; background-color: #f8f9fa;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mb-3">
      <%= f.input :email,
                  label: "Correo Electrónico",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control mb-2", placeholder: "Ingresa tu correo electrónico" } %>

      <%= f.input :password,
                  label: "Contraseña",
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control mb-2", placeholder: "Ingresa tu contraseña" } %>

      <%= f.input :remember_me, as: :boolean, label: "Recordarme" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions mb-4 text-center">
      <%= f.button :submit, "Iniciar Sesión", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
    <p class="mt-3">¿No tienes una cuenta? <%= link_to "Registrar", new_user_registration_path, class: "btn btn-outline-primary" %></p>
  </div>
</div>
