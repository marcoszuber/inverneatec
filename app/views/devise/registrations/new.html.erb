<h2 class="text-center mb-4">Registrarse</h2>

<div class="signup-form mx-auto p-4 border rounded" style="max-width: 500px; background-color: #f8f9fa;">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mb-3">
      <%= f.input :nombre,
                  label: "Nombre",
                  required: true,
                  input_html: { class: "form-control mb-2", placeholder: "Ingresa tu nombre" } %>

      <%= f.input :apellido,
                  label: "Apellido",
                  required: true,
                  input_html: { class: "form-control mb-2", placeholder: "Ingresa tu apellido" } %>

      <%= f.input :dni,
                  label: "DNI",
                  required: true,
                  input_html: { class: "form-control mb-2", placeholder: "Ingresa tu DNI" } %>

      <%= f.input :email,
                  label: "Correo Electrónico",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control mb-2", placeholder: "Ingresa tu correo electrónico" } %>

      <%= f.input :telefono,
                  label: "Teléfono",
                  required: true,
                  input_html: { class: "form-control mb-2", placeholder: "Ingresa tu número de teléfono" } %>

      <%= f.input :password,
                  label: "Contraseña",
                  required: true,
                  hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-control mb-2", placeholder: "Ingresa una contraseña" } %>

      <%= f.input :password_confirmation,
                  label: "Confirmar Contraseña",
                  required: true,
                  input_html: { autocomplete: "new-password", class: "form-control mb-2", placeholder: "Confirma tu contraseña" } %>
    </div>

    <div class="form-actions text-center mb-4">
      <%= f.button :submit, "Registrarse", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
    <p class="mt-3">¿Ya tienes una cuenta? <%= link_to "Iniciar Sesión", new_user_session_path, class: "btn btn-outline-primary" %></p>
  </div>
</div>
