          </tr>
        </thead>
        <tbody>
          <% @precios.each do |precio| %>
            <tr style="border-bottom: 1px solid #ddd;">
              <td style="padding: 15px;"><%= precio[:categoria] %></td>
              <td style="padding: 15px;"><%= precio[:max_precio] %></td>
              <td style="padding: 15px;"><%= precio[:prom_precio] %></td>
              <td style="padding: 15px;"><%= precio[:min_precio] %></td>
              <td style="padding: 15px;"><%= precio[:cantidad_cab] %></td>
