<div class="container">
  <div class="card">
    <div class="card-body">
      <%= form_with model: @archivo, url: archivos_path, multipart: true do |form| %>
        <div class="mb-3">
          <%= form.label :titulo, class: "form-label" %>
          <%= form.text_field :titulo, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :descripcion, class: "form-label" %>
          <%= form.text_field :descripcion, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :notas, class: "form-label" %>
          <%= form.text_field :notas, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :archivo, 'Seleccione un archivo CSV', class: "form-label" %>
          <%= form.file_field :archivo, accept: '.csv', class: "form-control" %>
        </div>

        <%= form.submit 'Cargar Archivo', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
