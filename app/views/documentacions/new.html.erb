<%= form_with(model: @documentacion, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :titulo, "Título del Documento" %>
    <%= form.select :titulo,
          options_for_select(["Factura de vacunación", "Certificado ePyME", "Facturas"], selected: @documentacion.titulo),
          {},
          class: "form-control select2" %>
  </div>
  <div class="form-group">
    <%= form.label :comentarios %>
    <%= form.text_area :comentarios, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :archivo, "Subir PDF" %>
    <%= form.file_field :archivo, class: "form-control" %>
  </div>
  <%= form.submit "Guardar", class: "btn btn-primary" %>
<% end %>
