<div class="container mt-5">
  <h1 class="mb-4">Detalles de la Documentación</h1>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h3 class="card-title"><%= @documentacion.titulo %></h3>
      <p class="card-text"><strong>Comentarios:</strong> <%= @documentacion.comentarios %></p>
      <p class="card-text"><strong>Usuario:</strong> <%= @documentacion.user.nombre %> <%= @documentacion.user.apellido %></p>
      <p class="card-text"><strong>Fecha de Creación:</strong> <%= @documentacion.created_at.strftime("%d/%m/%Y") %></p>

      <% if @documentacion.archivo.attached? %>
      <div class="mt-3">
        <p><strong>Archivo Adjunto:</strong></p>
        <%= link_to 'Descargar PDF', rails_blob_path(@documentacion.archivo, disposition: 'attachment'), target: '_blank', class: 'btn btn-primary' %>
      </div>
      <% else %>
        <p class="text-warning">No hay archivo adjunto.</p>
      <% end %>


    </div>
  </div>
  <%= link_to 'Volver a la lista', documentacions_path, class: 'btn btn-secondary' %>
</div>
