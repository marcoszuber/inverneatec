<!-- CSS de DataTables -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">

<!-- JavaScript de jQuery (requisito para DataTables) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- JavaScript de DataTables -->
<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

<div class="container">
  <div class="row justify-content-center">
    <h1 style="color: #118915; text-align: center;" class='mt-5'>Documentaciones</h1>

    <div class="col-12">
      <div class="d-flex justify-content-end mb-3">
        <%= link_to 'Nueva Documentación', new_documentacion_path, class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="col-12">
      <div class="table-responsive">
        <table id="tablaDocumentaciones" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Título</th>
              <th>Comentarios</th>
              <th>Usuario</th>
              <th>Fecha de Creación</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @documentacions.each do |documentacion| %>
              <tr>
                <td><%= documentacion.titulo %></td>
                <td><%= truncate(documentacion.comentarios, length: 50) %></td>
                <td><%= documentacion.user.nombre %> <%= documentacion.user.apellido %></td>
                <td><%= documentacion.created_at.strftime("%d/%m/%Y") %></td>
                <td>
                  <%= link_to 'Ver', documentacion_path(documentacion), class: 'btn btn-info btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#tablaDocumentaciones').DataTable({
      "order": [[3, "desc"]], // Ordena por la cuarta columna (índice 3) de forma descendente
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
      }
    });
  });
</script>
